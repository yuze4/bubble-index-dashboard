FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PORT=8000

WORKDIR /app

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY bubble_calc.py ./
COPY index.html ./
COPY static ./static
COPY data ./data
COPY README.md ./

CMD ["sh", "-c", "python bubble_calc.py && python -m http.server ${PORT}"]
